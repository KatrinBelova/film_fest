@import "variables"

@font-face
  font-family 'icomoon'
  src url(icomoon-font-path + '../../../fonts/icomoon.eot?fcakfl')
  src url(icomoon-font-path + '../../../fonts/icomoon.eot?fcakfl#iefix') format('embedded-opentype'), url(icomoon-font-path + '../../fonts/icomoon.ttf?fcakfl') format('truetype'), url(icomoon-font-path + '../../../fonts/icomoon.woff?fcakfl') format('woff'), url(icomoon-font-path + '../../../fonts/icomoon.svg?fcakfl#icomoon') format('svg')
  font-weight normal
  font-style normal

i
  font-family 'icomoon' !important
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1

  /* Better Font Rendering =========== */
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-left
  &:before
    content icon-left
.icon-right
  &:before
    content icon-right
.icon-location
  &:before
    content icon-location
.icon-facebook-circle
  &:before
    content icon-facebook-circle
.icon-instagram-circle
  &:before
    content icon-instagram-circle
.icon-instagram
  &:before
    content icon-instagram
.icon-close
  &:before
    content icon-close
.icon-menu
  &:before
    content icon-menu

