.button
  position relative
  top 0
  display inline-flex
  align-items center
  justify-content center
  vertical-align bottom
  min-height 2.15rem
  padding 0.8rem 1.5rem
  border 0
  background-color red
  color #fff
  font-size 1rem
  font-weight 400
  line-height 1.5rem
  letter-spacing normal
  text-transform uppercase
  text-align center
  cursor pointer
  text-decoration none
  transition .2s
  &:hover
    opacity .9
  &_block
    width 100%
  &_lg
    min-height 2.5rem
    padding .5rem 1.35rem
    font-size 1.5rem

@media screen and (max-width: 480px)
  .button
    font-size 1.4rem
    padding 1.4rem 2rem
