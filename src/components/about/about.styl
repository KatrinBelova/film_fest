.about
	margin-top 90px
	color #fff
	svg
		width 192px
		height 220px
		margin-top 10px
	h2
		text-transform uppercase
		font 400 3.12rem mainFont
	p
		padding-top 40px
		font 400 1.75rem mainFont
		
@media screen and (max-width: 992px)
	.about
		svg
			width 140px
			height 160px
		h2
			font-size 2.25rem
		p
			font-size 1.4rem

@media screen and (max-width: 576px)
	.about
		margin-top 30px
		margin-left 10px
		margin-right 10px
		svg
			width 90px
			height 120px
			margin-top 0
		h2
			font-size 1.35rem
			line-height 2rem
		p
			font-size 1.2rem
			line-height 1.7rem
			padding-top 15px
