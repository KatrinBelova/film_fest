.about
	margin-top 90px
	color #fff
	svg
		width 192px
		height 210px
		margin-top 10px
	h2
		text-transform uppercase
		font 400 3.125rem mainFont
	p
		padding-top 40px
		font 400 1.75rem mainFont
		
@media screen and (max-width: 1200px)
	.about
		svg
			width 162px
			height 170px
		h2
			font-size 2.25rem
			line-height 3rem
		p
			font-size 1.4rem
		
@media screen and (max-width: 992px)
	.about
		svg
			width 192px
			height 220px


@media screen and (max-width: 768px)
	.about
		margin-top 30px
		margin-left 10px
		margin-right 10px
		svg
			width 90px
			height 100px
			margin-top 6px
		h2
			display inline-block
			max-width 300px
			font-size 1.35rem
			line-height 2rem
		p
			font-size 1.2rem
			line-height 1.7rem
			padding-top 15px

@media screen and (max-width: 389px)
	.about
		svg
			width 90px
			height 96px
			margin-top 4px
		h2
			font-size 1.125rem
			line-height 1.5rem
			max-width 170px
			