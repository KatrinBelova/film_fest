.header
	position absolute
	z-index 1
	width 100%
	top 0
	right 0
	background-color rgba(0,0,0,0.7)
	padding 20px 0
	color #ffffff
	text-transform uppercase
	font 400 14px mainFont
	letter-spacing 1.68px
	transition all 0.4s
	&__logo
		svg
			width 40px
			height 45px
	&__facebook
		margin-right 18px
	&__facebook,
	&__instagram
		width w = 30px
		height 30px
		line-height w
		text-align center
		border-radius 50%
		color rgba(255,255,255,1)
		font-size 2rem	
	&__menu
		display none
		position fixed
	&__exit
		display none

.header_top
	transform translateY(-100%)
	transition all .4s ease-in-out

.fixed_header
	transform translateY(0)
	transition all .4s ease-in-out
	position fixed
	top 0
	left 0
	background rgba(0,0,0,1)
	z-index 999


@media screen and (max-width: 1200px)
	.header
		font-size 0.7rem	

@media screen and (max-width: 992px)
	.header
		font-size 0.55rem
		padding 15px 0
		&__logo
			svg
				width 30px
				height 35px
		&__facebook
			margin-right 18px
		.header__button
			font-size 0.65rem
			padding 0.5rem 0.8rem

@media screen and (max-width: 768px)
	.header
		display none
		background-color rgba(0,0,0,0.9)
		right -100%
		height 100vh
		padding 15px 0
		font-size 1.2rem
		transition all 0.4s linear
		&__logo
			display none
		&__lang
			display flex
		&__facebook,
		&__instagram
			width w = 50px
			height 50px
			line-height w
			font-size 3rem
		&__menu,
		&__exit
			display block
			color #fff
			cursor pointer
		&__menu
			top 21px
			right 10px
			width 57px
			height 36px
			font-size 3rem
			line-height 0
			z-index 1
		&__exit
			position absolute
			top 28px
			right 30px
			font-size 1.9rem
			z-index 9999
		&__list
			margin-top 25px
			margin-right 15px
		&__item
			padding-top 30px
		&__facebook
			margin-right 9px
		.header__button
			display none
