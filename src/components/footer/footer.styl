.footer
	width 100%
	height 100vh
	background url(../images/fashion_films.jpg) center no-repeat
	background-size cover
	text-align center
	p,
	span
		font 400 0.875rem Lato
		color #fff
	p
		padding-top 50vh
	span
		display block
		padding-top 25vh
		padding-left 20px
	&__logo
		display inline-block
		margin auto
	&__img
		display none
	&__logo,
	&__gif
		width 170px
		height 85px
		
@media screen and (max-width: 480px)
	.footer
		&__img
			display block
		&__logo,
		img
			width 90px
			height 22px
		span
			padding-left 0
