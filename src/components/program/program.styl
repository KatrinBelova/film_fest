.program
	&__caption
		margin-top 140px
	&__button
		min-width 218px
		height 50px
		margin-top 55px
	&__table
		display table
		margin-top 60px
	&__row
		display table-row
	&__timetable,
	&__location
		display table-cell
	&__location_cinema,
	&__location_openair
		padding-left 40px
		.program__time
			opacity 0
	&__location
		p
			padding-left 70px
	.program__header.program__header_pavilion
		padding-left 200px
	// p.program__head
	// 	opacity 0
	&__event
		padding-top 20px
		padding-bottom 20px
	p
		font 700 1.25rem ptSans
		color red
		text-transform uppercase
	&__event
		display flex
	&__time
		font 700 2.5rem ptSans
		color red
		sup
			font-size 1.5rem
	&__title
		font 400 1.125rem ptSans
		line-height 1.75rem
		color textColor
		max-width 230px
	&__location
		.program__time
			// display none
	&__location_pavilion
		.program__time
			padding-right 125px
		
