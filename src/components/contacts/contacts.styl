.contacts
	margin-top 110px
	&__wrap
		margin-top 60px
	&__info
		width 25%
		background-color #1e1e1e
		padding 60px 50px 60px 20px
	&__map
		width 75%
		background-color #ebf0f1
	#map
		width 100%
		height 412px
	a, p, span
		font-family ptSans
	a, p
		color textColor
		font-weight 700
	span
		color red
		margin-top 20px
		font-weight 400
	&__divider
		width 100%
		height 90px
		background-color #000

@media screen and (max-width: 1200px)
	.contacts
		#map
			height 460px
		
@media screen and (max-width: 992px)
	.contacts
		&__info,
		&__map
			width 100%

			
@media screen and (max-width: 480px)
	.contacts
		margin-top 60px
		&__wrap
			margin-top 50px
		&__info
			text-align center
			padding 30px 30px
		&__divider
			height 60px