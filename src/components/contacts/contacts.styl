.contacts
	margin-top 110px
	&__wrap
		margin-top 60px
	&__info
		width 25%
		background-color #1e1e1e
		padding 60px 50px 60px 20px
	&__map
		width 75%
		background-color #ebf0f1
	#map
		width 100%
		height 400px
	a, p, span
		font-family ptSansFont
	a, p
		color textColor
		font-weight 700
	span
		color red
		margin-top 20px
		font-weight 400
		
@media screen and (max-width: 992px)
	.contacts
		&__info,
		&__map
			width 100%
			
@media screen and (max-width: 480px)
	.contacts
		margin-top 60px
		&__wrap
			margin-top 50px
		&__info
			padding 30px 0