.nominees
	margin-top 100px
	&__list
		display flex
		flex-wrap wrap
		justify-content space-between
		margin-top 30px
	&__item
		width 350px
		height 350px
		margin-top 30px
		overflow hidden
	&__link
		position relative
		display block
		width 100%
		height 100%
	&__poster
		width 100%
		height 100%
	&__wrap
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		transition all 0.25s ease-in-out
	&__description
		position absolute
		display block
		bottom 0
		left 0
		width 100%
		min-height 115px
		background-color rgba(255,255,255,0.75)
		text-align center
	span
		display block
		color red
		font 700 1.25rem ptSans
		margin-top 20px
	p
		color #000
		font 400 1.125rem ptSans
		
@media screen and (max-width: 1200px)
	.nominees
		&__list
			justify-content space-around
		&__item
			width 365px
			height 365px
			margin-right 40px
			margin-left 40px
			

@media screen and (max-width: 992px)
	.nominees
		margin-top 45px
		&__list
			margin-top 10px
		
@media screen and (max-width: 768px)
	.nominees
		&__item
			margin-right 0
			margin-left 0

@media screen and (max-width: 480px)
	.nominees
		&__item
			width 290px
			height 290px